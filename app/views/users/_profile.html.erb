<table class="table">
		<tr>
		<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
	  </tr>

		<tr>
			<th>name</th>
			<th><%= current_user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= current_user.introduction %></th>
		</tr>
</table>
<div class="row">
<% if user != current_user %>
<p><%= link_to "", user_path(current_user), class: "btn btn-block btn-default glyphicon glyphicon-wrench" %></p>
<% else %>
<p><%= link_to "", edit_user_path(user), class: "btn btn-block btn-default glyphicon glyphicon-wrench" %></p>
<% end %>
</div>


